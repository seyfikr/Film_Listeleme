@model MoviesViewModel

    <h1>Film Listesi</h1>

    <div id="filmler">
    @if (Model.Movies.Count > 0)
    {
        @foreach (var film in Model.Movies)
        {
            @await Html.PartialAsync("_movie", film)
        }
    }
    else
    {
        <div class="alert alert-warning">
            Bu katogoride Film bulunamadı
        </div>
    }

    </div>
@if (TempData["Message"] != null)
    {
    @section message
      {
    @await Html.PartialAsync("_message", (string)TempData["Message"])
      }
    }
    @section menu
    {
        @* @await Html.PartialAsync("_menu",Model.Genres) *@
        @await Component.InvokeAsync("Genres")
    }


