@model List<Genre>
<div class="list-group">
    <a href="/movies/list" class="list-group-item-group-item-action @(ViewBag.SelectedGenre==null?"active":"")">Tüm Filmler</a>

    @foreach (var genre in Model)
    {
        @* <button type="button" class="list-group-item list-group-item-action" disabled>@genre.Name</button> *@
        //<button href="/movies/list/@genre.GenreId" class="list-group-item-group-item-action  @(ViewBag.SelectedGenre==genre.GenreId.ToString()?"active":"")"> @genre.Name</button>
        <form action="/movies/list/@genre.GenreId" method="get" style="display:inline;">
            <button type="submit"
                    class="list-group-item list-group-item-action @(ViewBag.SelectedGenre == genre.GenreId.ToString() ? "active" : "")">
                @genre.Name
            </button>
        </form>
    }
</div>